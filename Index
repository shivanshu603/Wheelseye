    <script>
        function openWhatsApp(product) {
            const phoneNumber = '917042622833'; // Added country code for India
            let message = '';
            
            if (product === 'standard') {
                message = 'Hi! I am interested in WheelsEye Standard GPS tracking system. Please provide more details and pricing.';
            } else if (product === 'pro') {
                message = 'Hi! I am interested in WheelsEye GPS PRO advanced tracking system. Please provide more details and pricing.';
            }
            
            // Multiple fallback options to ensure it works
            const encodedMessage = encodeURIComponent(message);
            
            // Try WhatsApp API first
            const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodedMessage}`;
            
            try {
                // For mobile devices - try WhatsApp app first
                if (/Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent)) {
                    const whatsappApp = `whatsapp://send?phone=${phoneNumber}&text=${encodedMessage}`;
                    window.location.href = whatsappApp;
                    
                    // Fallback to web version after 1 second if app doesn't open
                    setTimeout(() => {
                        window.open(whatsappUrl, '_blank');
                    }, 1000);
                } else {
                    // For desktop - open web version directly
                    window.open(whatsappUrl, '_blank');
                }
            } catch (error) {
                // Ultimate fallback - just open WhatsApp web
                window.open(whatsappUrl, '_blank');
            }
        }

        // Add click event listeners when page loads
        document.addEventListener(
